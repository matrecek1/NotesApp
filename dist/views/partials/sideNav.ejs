<div id="sidebar-nav" class="mb-3 col-md-3 col-12 col-lg-2">
    <% if(sorters.categories){ %>
    <div class="dropdown mb-3" data-bs-theme="light">
        <a class="navbar-toggler dropdown-toggle fs-4" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Categories
        </a>
        <ul class="dropdown-menu">
            <% if(sorters.categories.length > 0){ %> 
            <% for(let category of sorters.categories){ %>
            <% if(!activeCategory) var activeCategory %> 
            <li><a class="dropdown-item <%= activeCategory===category?"active":"" %> " href="/notes/categories/<%= category %> "><%= category %> </a></li>
            <% } %>
            <% } else{ %> 
                <li class="dropdown-item">No notes with category</li>
                <% } %>  
        </ul>
    </div>
    <% } %> <% if(sorters.tags){ %>
    <div class="dropdown">
        <a class="navbar-toggler dropdown-toggle fs-4" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> Tags </a>
        <ul class="dropdown-menu">
            <% if(sorters.tags.length > 0){ %> 
            <% for(let tag of sorters.tags){ %>
                <% if(!activeTag) var activeTag %>
            <li><a class="dropdown-item <%= activeTag===tag?"active":""%>" href="/notes/tags/<%= tag %> "><%= tag %> </a></li>
            <% } %>
            <% }else{ %> 
                <li class="dropdown-item">No notes with tags</li>
                <% } %> 
        </ul>
        <% } %>
    </div>
</div>
