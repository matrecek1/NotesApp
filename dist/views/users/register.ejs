<% layout('/layout/boilerplate') -%>
<div class="row">
    <div class="col-xl-4 offset-xl-4 col-md-6 offset-md-3 col-10 offset-1">
        <form action="/user/register" method="post">
            <div class="mb-3">
                <label for="form-name" class="form-label">Name</label>
                <input type="text" name="username" id="form-name" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="form-password" class="form-label">password</label>
                <input type="password" name="password" id="form-password" class="form-control" />
            </div>
            <div class="row">
                <button class="btn btn-primary col-3" type="submit">Register</button>
                <div class="col-9 d-flex flex-direction-row align-items-center justify-content-end">
                    <div class="">Already have an account?</div>
                    <a class="btn ms-2 btn-primary" href="/user/login">Login</a>
                </div>
            </div>
        </form>
    </div>
</div>
